---
import { useTranslation } from "@/i18n";
import { useSections, PROFILE_DATA } from "@config/constants";

const { currentLocale } = Astro;
const { t } = useTranslation(currentLocale);

const currentYear = new Date().getFullYear();
const {
  names: { socialNickname },
} = PROFILE_DATA;

const PAGE_SECTIONS = useSections({ currentLocale });
---

<footer
  class="container mx-auto mb-10 mt-16 flex flex-col-reverse items-center justify-center gap-3 py-4 text-sm opacity-80 md:max-w-2xl md:flex-row md:justify-between lg:max-w-4xl"
>
  <span class="text-zinc-800/90 dark:text-zinc-200/90">
    Â© {currentYear}
    <a href="https://fabos.dev/" class="hover:underline" target="_blank">
      {socialNickname}
    </a>. {t("footer.greeting")}
  </span>

  <ul class="flex flex-row gap-5 font-medium dark:text-white/90">
    {
      PAGE_SECTIONS.map((link) => (
        <li>
          <a href={`#${link.id}`} class="hover:underline">
            {link.title}
          </a>
        </li>
      ))
    }
  </ul>
</footer>
