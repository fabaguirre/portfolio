---
import { PROFILE_DATA } from "@config/constants";

import GitHubIcon from "@icons/GitHub.astro";
import GitlabIcon from "@icons/Gitlab.astro";
import LinkedInIcon from "@icons/LinkedIn.astro";
import MailFilledIcon from "@icons/MailFilled.astro";

const {
  email,
  socialMedia: { github, gitlab, linkedin },
} = PROFILE_DATA;

const contactItems = [
  {
    href: `mailto:${email}`,
    icon: MailFilledIcon,
    text: email,
  },
  {
    href: linkedin.url,
    icon: LinkedInIcon,
    text: `/${linkedin.username}`,
  },
  {
    href: github.url,
    icon: GitHubIcon,
    text: `/${github.username}`,
  },
  {
    href: gitlab.url,
    icon: GitlabIcon,
    text: `/${gitlab.username}`,
  },
];
---

<ul class="mt-16 grid grid-cols-2 gap-4 gap-y-10 text-sm">
  {
    contactItems.map(({ href, icon: Icon, text }) => (
      <li>
        <a
          href={href}
          target="_blank"
          rel="noopener noreferrer"
          class="grid grid-cols-[auto,1fr] items-center gap-2 hover:underline"
        >
          <Icon class="size-6 opacity-75 dark:opacity-90" />
          <span class="overflow-hidden text-ellipsis">{text}</span>
        </a>
      </li>
    ))
  }
</ul>
