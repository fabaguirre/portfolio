---
import ProjectItem from "@components/ProjectItem.astro";

import AWSIcon from "@icons/Aws.astro";
import ExpressIcon from "@icons/Express.astro";
import GraphQLIcon from "@icons/GraphQL.astro";
import MySQLIcon from "@icons/MySql.astro";
import NodeJSIcon from "@icons/NodeJS.astro";
import PrismaIcon from "@icons/Prisma.astro";
import TypescriptIcon from "@icons/Typescript.astro";
import VueIcon from "@icons/Vue.astro";

const TECHNOLOGIES = {
  AWS: {
    name: "AWS",
    class: "bg-[#ff990035] text-[#ff9900]",
    icon: AWSIcon,
  },
  EXPRESS: {
    name: "Express",
    class: "bg-[#22222235] text-[#222222] dark:bg-[#222222aa] dark:text-white",
    icon: ExpressIcon,
  },
  GRAPHQL: {
    name: "GraphQL",
    class: "bg-[#e1009a35] text-[#e1009a]",
    icon: GraphQLIcon,
  },
  MYSQL: {
    name: "MySQL",
    class: "bg-[#00758f35] text-[#00758f] dark:bg-[#00758f35]",
    icon: MySQLIcon,
  },
  NODE: {
    name: "Node.js",
    class: "bg-[#44883e35] text-[#44883e]", // #333333
    icon: NodeJSIcon,
  },
  PRISMA: {
    name: "Prisma",
    class: "bg-[#0c344b55] text-[#0c344b] dark:bg-[#0c344bbb] dark:text-white",
    icon: PrismaIcon,
  },
  TYPESCRIPT: {
    name: "TypeScript",
    class: "bg-[#3178c635] text-[#3178c6] dark:bg-[#00273fbb]",
    icon: TypescriptIcon,
  },
  VUE: {
    name: "Vue.js",
    class:
      "bg-[#42b88340] text-[#42b883] dark:text-[#42b883] dakr:bg-[#34495Eaa]",
    icon: VueIcon,
  },
};

const projects = [
  {
    title: "FractalUp | All-in-One Metaverse",
    description:
      "FractalUp es una plataforma de red todo en uno que ofrece SuperApps autoconfigurables. Optimiza el compromiso y la productividad en diversos sectores, como marketing y formación, creando comunidades online activas y aumentando la fidelización sin necesidad de código.",
    link: "https://fractalup.com/",
    image: "fractalup.webp",
    technologies: [
      TECHNOLOGIES.VUE,
      TECHNOLOGIES.TYPESCRIPT,
      TECHNOLOGIES.GRAPHQL,
    ],
  },
  {
    title: "Medical Appointment App",
    description:
      "Una aplicación de gestión de citas médicas diseñada para profesionales sanitarios. Permite a los médicos y al personal sanitario gestionar eficazmente las citas con sus pacientes.",
    image: "med_appt.webp",
    technologies: [
      TECHNOLOGIES.VUE,
      TECHNOLOGIES.TYPESCRIPT,
      TECHNOLOGIES.NODE,
      TECHNOLOGIES.EXPRESS,
      TECHNOLOGIES.AWS,
      TECHNOLOGIES.MYSQL,
      TECHNOLOGIES.PRISMA,
    ],
  },
];
---

<ul class="mt-16 space-y-24">
  {
    projects.map((project, index) => (
      <li>
        <ProjectItem {...project} reverse={index % 2 === 1} />
      </li>
    ))
  }
</ul>
