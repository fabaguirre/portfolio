---
interface Props {
  title: string;
  company: string;
  companyIcon: any;
  type: "remote" | "onsite" | "hybrid";
  startDate: string;
  endDate: string;
  description: string[];
  isCurrent?: boolean;
}

const { currentLocale } = Astro;
const {
  companyIcon: CompanyIcon,
  title,
  company,
  startDate,
  endDate,
  description,
  type,
  isCurrent,
} = Astro.props;

const typeClass = {
  remote: "bg-blue-100 text-blue-800 dark:bg-sky-900 dark:text-sky-300",
  onsite: "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300",
  hybrid:
    "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300",
};

const typeColor = typeClass[type];

function formatDate(date: string) {
  return new Date(date).toLocaleDateString(currentLocale, {
    month: "long",
    year: "numeric",
  });
}

const dateRange = `${formatDate(startDate)} - ${isCurrent ? "Actualidad" : formatDate(endDate)}`;
---

<article class="flex flex-col gap-5 lg:flex-row">
  <span
    class="absolute -start-[17px] flex size-8 items-center justify-center rounded-full bg-pink-400 dark:bg-pink-200"
  >
    <CompanyIcon class="size-5 text-white dark:text-slate-950" />
  </span>

  <header class="lg:w-2/5">
    <h3
      class="mb-2 flex items-center text-xl font-bold text-pink-600 dark:text-pink-400"
    >
      {title}
    </h3>

    <h4 class="mb-1 text-xl font-semibold text-gray-600 dark:text-white">
      <a
        class="hover:underline"
        href="https://www.info.fractalup.com/"
        target="_blank"
      >
        {company}
      </a>
    </h4>

    <time
      class="mb-3 block text-sm font-normal capitalize leading-none text-gray-600/80 lg:mb-5 dark:text-white/80"
    >
      {dateRange}
    </time>

    <span
      class:list={[
        `rounded px-2.5 py-0.5 text-sm font-medium capitalize`,
        `${typeColor}`,
      ]}
    >
      {type}
    </span>
  </header>

  <div class="flex-1 space-y-5">
    {
      description.map((desc) => (
        <p class="text-pretty text-base font-light text-gray-600 dark:text-gray-300">
          {desc}
        </p>
      ))
    }
  </div>
</article>
